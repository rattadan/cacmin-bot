{
  "name": "cac-admin-bot",
  "version": "2.1.0",
  "description": "Cosmos Airdrops Chat Admin Bot - Production Ready",
  "main": "dist/bot.js",
  "scripts": {
    "start": "node dist/bot.js",
    "dev": "ts-node-dev --respawn --transpile-only src/bot.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "rebuild": "./rebuild.sh",
    "rebuild:dev": "./rebuild.sh --dev",
    "rebuild:quick": "./rebuild.sh --quick",
    "rebuild:full": "./rebuild.sh --full",
    "setup-db": "ts-node scripts/setup-db.ts",
    "validate": "ts-node scripts/validate.ts",
    "validate:postbuild": "BUILD_VALIDATION=true ts-node scripts/validate.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "telegram",
    "bot",
    "admin",
    "cosmos",
    "juno",
    "moderation"
  ],
  "author": "Cordtus",
  "license": "MIT",
  "dependencies": {
    "@cosmjs/crypto": "^0.36.1",
    "@cosmjs/proto-signing": "^0.36.1",
    "@cosmjs/stargate": "^0.36.1",
    "better-sqlite3": "^11.5.0",
    "cosmos-client": "^0.42.14",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.3",
    "telegraf": "^4.16.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.9.3",
    "@types/node-cron": "^3.0.10",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^4.0.7",
    "@vitest/ui": "^4.0.7",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2",
    "vitest": "^4.0.7"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
