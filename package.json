{
  "name": "cac-admin-bot",
  "version": "2.0.0",
  "description": "Cosmos Airdrops Chat Admin Bot - Production Ready",
  "main": "dist/bot.js",
  "scripts": {
    "start": "node dist/bot.js",
    "start:prod": "npm run validate && node dist/bot.js",
    "dev": "ts-node-dev --respawn --transpile-only src/bot.ts",
    "build": "tsc",
    "build:clean": "npm run clean && npm run build",
    "build:full": "npm run clean && npm run build && npm run validate:postbuild",
    "setup-db": "ts-node scripts/setup-db.ts",
    "migrate": "ts-node scripts/migrate.ts",
    "validate": "ts-node scripts/validate.ts",
    "validate:postbuild": "BUILD_VALIDATION=true ts-node scripts/validate.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "deploy": "npm run build:clean && npm run validate:postbuild"
  },
  "keywords": [
    "telegram",
    "bot",
    "admin",
    "cosmos",
    "juno",
    "moderation"
  ],
  "author": "Cordtus",
  "license": "MIT",
  "dependencies": {
    "@cosmjs/crypto": "^0.36.1",
    "@cosmjs/proto-signing": "^0.36.1",
    "@cosmjs/stargate": "^0.36.1",
    "better-sqlite3": "^11.5.0",
    "cosmos-client": "^0.42.14",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.3",
    "telegraf": "^4.16.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/jest": "^29.5.10",
    "@types/node": "^22.9.3",
    "@types/node-cron": "^3.0.10",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
